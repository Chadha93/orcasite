{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach by NodeJS Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "trace": true,
            "outFiles": [ 
                "${workspaceFolder}/**/*.js.map",
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
            "sourceMapPathOverrides": {
                //"meteor://ðŸ’»app/*": "${workspaceFolder}/*",
                "webpack:///": "${workspaceFolder}/assets/",
                //"webpack://?:*/*": "${workspaceFolder}/assets/*"
            }
        },
        {
            "name": "Attach to Chrome",
            "port": 4000,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}",            
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:4000",
            //"webRoot": "${workspaceFolder}",
            //"outFiles": ["${workspaceFolder}/assets/src/**/*.js"],
        },
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/app.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "mix_task",
            "name": "mix deps.get",
            "request": "launch",
            "projectDir": "${workspaceRoot}"
        },
        {
            "type": "mix_task",
            "name": "mix (Default task)",
            "request": "launch",
            "task": "phx.server",
            "projectDir": "${workspaceRoot}",
            "excludeModules": [":bcrypt_nif", "Bcrypt.Base"]
        },
        {
            "type": "mix_task",
            "name": "mix test",
            "request": "launch",
            "task": "test",
            "taskArgs": [
                "--trace"
            ],
            "startApps": true,
            "projectDir": "${workspaceRoot}",
            "requireFiles": [
                "test/**/test_helper.exs",
                "test/**/*_test.exs"
            ]
        }
    ],
}